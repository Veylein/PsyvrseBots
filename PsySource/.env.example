# Example environment variables for the PsySource Render webhook bot
# Copy to .env and fill values before running

# Psyverse bot token (required to post messages)
PSYVERSE_TOKEN=YOUR_PSYVERSE_BOT_TOKEN

# Channel id where deploy messages should be posted
LOG_CHANNEL=123456789012345678

# Secret value used to validate Render webhook payloads (required)
RENDER_WEBHOOK_SECRET=your_render_webhook_secret_here

# Optional: Render API key used to fetch logs if the logs URL requires auth
RENDER_API_KEY=your_render_api_key_here

# Optional: Role ID to mention when deploys fail
FAILURE_ROLE_ID=987654321098765432

# Optional: if true, only failures will be posted (successes will be ignored)
SILENCE_SUCCESS=false

# Port for Express server (default 3000)
PORT=3000
