{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Conditor Template",
  "type": "object",
  "required": ["template_name", "roles", "categories"],
  "properties": {
    "template_name": {"type": "string"},
    "description": {"type": "string"},
    "roles": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "permissions": {"type": "array", "items": {"type": "string"}},
          "color": {"type": "string"},
          "hoist": {"type": "boolean"},
          "mentionable": {"type": "boolean"}
        }
      }
    },
    "categories": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name","channels"],
        "properties": {
          "name": {"type": "string"},
          "channels": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["type","name"],
              "properties": {
                "type": {"type": "string", "enum": ["text","voice","stage","forum","announcement"]},
                "name": {"type": "string"},
                "topic": {"type": "string"},
                "permissions": {"type": "object"},
                "bitrate": {"type": "integer"},
                "user_limit": {"type": "integer"}
              }
            }
          }
        }
      }
    },
    "unique_variation_rules": {
      "type": "object",
      "properties": {
        "rename_patterns": {"type": "boolean"},
        "conditional_channels": {"type": "boolean"},
        "scaling_rules": {"type": "boolean"}
      }
    }
  }
}
