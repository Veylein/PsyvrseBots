{
  "$schema": "./schema.json",
  "template_name": "game_server",
  "name": "game_server",
  "description": "Template for a gaming-focused server with voice rooms, matchmaking, and a tournament category.",
  "metadata": {"version": "1.0", "author": "Conditor", "density": "high"},
  "roles": [
    {"template_name": "owner", "name": "Owner", "permissions": ["administrator"]},
    {"template_name": "dev", "name": "Developer", "permissions": ["manage_guild", "manage_channels"]},
    {"template_name": "player", "name": "Player", "permissions": ["read_messages", "send_messages", "connect", "speak"]},
    {"template_name": "spectator", "name": "Spectator", "permissions": ["read_messages"]},
    {"template_name": "matchmaker", "name": "Matchmaker", "permissions": ["manage_channels", "manage_messages"]}
  ],
  "categories": [
    {"name": "Lobby", "channels": [
      {"name": "matchmaking", "type": "text", "topic": "Find players", "permissions": {"player": {"view_channel": true, "send_messages": true}}},
      {"name": "voice-1", "type": "voice", "topic": "Casual voice room", "permissions": {"player": {"connect": true, "speak": true}}}
    ]},
    {"name": "Tournaments", "channels": [
      {"name": "announcements", "type": "announcement", "topic": "Tournament news", "permissions": {"player": {"view_channel": true, "send_messages": false}}},
      {"name": "brackets", "type": "text", "topic": "Bracket discussion"}
    ]},
    {"name": "Strategy", "channels": [
      {"name": "strat-talk", "type": "text", "topic": "Strategy and guides"},
      {"name": "clips", "type": "forum", "topic": "Share highlights"}
    ]}
  ],
  "summary": "Gaming server layout with voice rooms, matchmaking, tournaments, and forums for clips."
}
