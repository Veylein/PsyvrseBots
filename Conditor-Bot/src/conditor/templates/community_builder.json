{
  "$schema": "./schema.json",
  "template_name": "community_builder",
  "name": "community_builder",
  "description": "A welcoming community layout with announcement channels, roles for staff, and topic-focused categories.",
  "metadata": {
    "version": "1.0",
    "author": "Conditor",
    "density": "medium"
  },
  "roles": [
    {"template_name": "owner", "name": "Owner", "permissions": ["administrator"]},
    {"template_name": "admin", "name": "Admin", "permissions": ["manage_guild", "manage_roles", "manage_channels"]},
    {"template_name": "moderator", "name": "Moderator", "permissions": ["manage_messages", "kick_members", "ban_members"]},
    {"template_name": "member", "name": "Member", "permissions": ["read_messages", "send_messages"]},
    {"template_name": "guest", "name": "Guest", "permissions": ["read_messages"]}
  ],
  "categories": [
    {
      "name": "Welcome",
      "channels": [
        {"name": "welcome", "type": "text", "topic": "Start here", "permissions": {"guest": {"view_channel": true, "send_messages": false}}},
        {"name": "rules", "type": "text", "topic": "Server rules", "permissions": {"guest": {"view_channel": true, "send_messages": false}}},
        {"name": "announcements", "type": "announcement", "topic": "Official news", "permissions": {"member": {"view_channel": true, "send_messages": false}}}
      ]
    },
    {
      "name": "General",
      "channels": [
        {"name": "general", "type": "text", "topic": "General chat", "permissions": {"member": {"view_channel": true, "send_messages": true}}},
        {"name": "introductions", "type": "text", "topic": "Introduce yourself", "permissions": {"member": {"view_channel": true, "send_messages": true}}}
      ]
    },
    {
      "name": "Topics",
      "channels": [
        {"name": "topic-1", "type": "text", "topic": "Topic area 1"},
        {"name": "topic-2", "type": "text", "topic": "Topic area 2"}
      ]
    }
  ],
  "summary": "Community server with announcements, roles, moderated text channels, and topic categories."
}
